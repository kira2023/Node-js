<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Write name" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Write price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Course Image</label>
        <span class="helper-text" data-error="Add imege"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">

    <input name="_csrf" type="hidden" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Save Course</button>
</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course._id}}">

    <input name="_csrf" type="hidden" value="{{csrf}}">

    <button class="btn red">Delete course</button>
</form>